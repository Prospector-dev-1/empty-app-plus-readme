{
  "project_name": "Unified App",
  "goal": "Merge three role-specific UIs (Creator, Innovator, Investor) into one Lovable project with a single Supabase backend and role-based routing.",
  "backend": {
    "provider": "supabase",
    "env": {
      "url": "NEXT_PUBLIC_SUPABASE_URL",
      "anon_key": "NEXT_PUBLIC_SUPABASE_ANON_KEY",
      "service_key": "SUPABASE_SERVICE_KEY"
    }
  },
  "auth_policy": {
    "enabled": true,
    "provider": "email+oauth",
    "roles": [
      "anon",
      "user",
      "admin"
    ],
    "profile_role_field": "profiles.role",
    "route_guards": {
      "public": [
        "/",
        "/onboarding",
        "/auth/*",
        "/pricing"
      ],
      "protected": [
        "/app/*",
        "/creator/*",
        "/innovator/*",
        "/investor/*"
      ]
    }
  },
  "onboarding": {
    "selector_page": "/onboarding",
    "local_key": "userRole",
    "supabase_profile_field": "role",
    "choices": [
      "creator",
      "innovator",
      "investor"
    ],
    "post_select_redirects": {
      "creator": "/creator/dashboard",
      "innovator": "/innovator/dashboard",
      "investor": "/investor/dashboard"
    }
  },
  "ui_packages": {
    "creator": {
      "source": "zip:creator-ui-main.zip",
      "routes_detected": 10,
      "components_detected": 99
    },
    "innovator": {
      "source": "zip:Innovator-UI-main.zip",
      "routes_detected": 9,
      "components_detected": 127
    },
    "investor": {
      "source": "zip:investor-ui-main.zip",
      "routes_detected": 7,
      "components_detected": 87
    }
  },
  "env_matrix": [
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "NEXT_PUBLIC_SUPABASE_URL",
    "SUPABASE_SERVICE_KEY",
    "VITE_SUPABASE_PROJECT_ID",
